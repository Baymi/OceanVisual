{
    "compilerOptions": {
        "sourceMap": true,
        "allowJs": true,
        "target": "es5",
        "jsx": "react",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": false,
        "noImplicitAny": false,
        "noImplicitReturns": false,
        "removeComments": true,
        "strictNullChecks": false,
        "typeRoots": [
      "../node_modules/@types"
    ],
        "outDir": "public",
        "lib": [
            "es6",
            "es7",
            "dom"
        ]
    },
    "exclude": [
        "public",
        "build",
        "node_modules"
    ]
}